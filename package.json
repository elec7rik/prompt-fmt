{
  "name": "prompt-formatter",
  "version": "1.0.1",
  "description": "Transform casual prompts into well-formatted prompts optimized for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prompt-formatter": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elec7rik/prompt-fmt.git"
  },
  "author": "elec7rik",
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:binary": "npm run build && bun build ./dist/index.js --compile --outfile ./bin/prompt-formatter",
    "build:binary:all": "npm run build && npm run build:macos && npm run build:linux",
    "build:macos": "bun build ./dist/index.js --compile --target=bun-darwin-arm64 --outfile ./bin/prompt-formatter-darwin-arm64 && bun build ./dist/index.js --compile --target=bun-darwin-x64 --outfile ./bin/prompt-formatter-darwin-x64",
    "build:linux": "bun build ./dist/index.js --compile --target=bun-linux-x64 --outfile ./bin/prompt-formatter-linux-x64 && bun build ./dist/index.js --compile --target=bun-linux-arm64 --outfile ./bin/prompt-formatter-linux-arm64"
  },
  "keywords": [
    "cli",
    "prompt",
    "llm",
    "claude",
    "ai"
  ],
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "@inquirer/prompts": "^7.0.0",
    "ai": "^4.0.0",
    "chalk": "^5.0.0",
    "clipboardy": "^4.0.0",
    "commander": "^12.0.0",
    "conf": "^13.0.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  }
}
